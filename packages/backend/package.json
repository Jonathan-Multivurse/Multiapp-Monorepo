{
  "name": "backend",
  "version": "1.0.0",
  "description": "Prometheus Backend",
  "main": "index.js",
  "private": true,
  "scripts": {
    "db": "docker compose up mongo",
    "seed": "ts-node-dev --transpile-only --no-notify --exit-child db/seed/index.ts",
    "seed-staging": "ts-node-dev --transpile-only --no-notify --exit-child db/seed-staging/index.ts",
    "dev": "ts-node-dev --script-mode --transpile-only --no-notify --exit-child index.ts",
    "staging": "ts-node-dev -r dotenv/config --script-mode --transpile-only --no-notify --exit-child index.ts dotenv_config_path=.env.staging dotenv_config_debug=true",
    "prod": "ts-node -P tsconfig-prod.json --transpile-only index.ts",
    "test": "export NODE_OPTIONS=\"--max-old-space-size=8192\" && jest --no-cache --runInBand --logHeapUsage",
    "typecheck": "tsc --noEmit -p ./tsconfig.json",
    "lint": "eslint --cache --max-warnings=0 --ext .ts .",
    "lint:fix": "eslint --cache --fix --ext ts ."
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.67.0",
    "@aws-sdk/s3-request-presigner": "^3.67.0",
    "@aws-sdk/signature-v4": "^3.78.0",
    "@aws-sdk/url-parser": "^3.78.0",
    "apollo-server-core": "^3.10.2",
    "apollo-server-errors": "^3.3.1",
    "apollo-server-express": "^3.10.2",
    "apollo-server-plugin-base": "^3.6.1",
    "aws-sdk": "^2.1108.0",
    "axios": "^0.26.1",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.3",
    "dd-trace": "^2.12.2",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.6",
    "express": "^4.18.1",
    "firebase-admin": "^10.1.0",
    "google-auth-library": "^7.14.1",
    "graphql": "^16.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "migrate-mongo": "^9.0.0",
    "mongodb": "^4.4.1",
    "peekalink": "^1.0.3",
    "stream-chat": "^6.5.1",
    "ts-node": "^10.7.0",
    "uuid": "^8.3.2",
    "yup": "^0.32.11",
    "yup-phone": "^1.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.1.2",
    "@types/ejs": "^3.1.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node-fetch": "^2.6.1",
    "@types/uuid": "^8.3.4",
    "apollo-server-types": "^3.5.2",
    "jest": "^27.5.1",
    "mongodb-memory-server": "^8.5.0",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8"
  }
}
